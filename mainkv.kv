<HomeScreen>:
    name: 'home'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
                  
        MDLabel:
            text: "Agende seu horário :"
            font_size: "24sp"
            font_name: "JosefinSans-Regular.ttf"
            pos_hint: {"center_x": .6, "center_y": .75}    
        
        MDLabel:
            text: " "
            halign:"center"
            font_size: "16sp"
            font_name: "JosefinSans-Regular.ttf"
            pos_hint: {"center_x": .5, "center_y": .09}    
            id: hora_registro           
        
        MDFloatLayout:
            height: 400
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .35}  
            MDIconButton:
                icon: "chevron-down"
                user_font_size: "35sp"
                pos_hint: {"center_x": .96, "center_y": 3}
                on_release: root.mostrarCalendario()

            MDLabel:     
                text:"Data"
                font_size: "14sp"
                font_name: "JosefinSans-Regular.ttf"
                pos_hint: {"center_x": .5, "center_y": 3.3} 
            
            MDLabel:
                id: data
                text: " "
                font_size: "12sp"
                font_name: "JosefinSans-Regular.ttf"
                pos_hint: {"center_x": .5, "center_y": 2.9} 


            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 2.55}
                size_hint_y: .03    
                md_bg_color: 0, 0, 0, 1    

        
        MDFloatLayout:
            size_hint: .79, .08
            pos_hint: {"center_x": .5, "center_y": .35}  
            MDLabel:
                text:"Horário"
                font_size: "14sp"
                font_name: "JosefinSans-Regular.ttf"
                pos_hint: {"center_x": .5, "center_y": .9} 
            TextInput:
                id: horario 
                size_hint_y: .75
                font_name: "JosefinSans-Regular.ttf"
                pos_hint: {"center_x": .49, "center_y": .4} 
                background_color: 0, 0, 0, 0    
                cursor_color: 0, 0, 0, 1
                cursor_width: "2sp"
                font_size: "17sp"
                multiline: False
            Image: 
                source: "clock.png"     
                pos_hint: {"center_x": .96, "center_y": .5}
                size_hint: .4, .4
            MDFloatLayout:
                pos_hint: {"center_x": .5, "center_y": 0}
                size_hint_y: .03    
                md_bg_color: 0, 0, 0, 1            

        MDRaisedButton:
            text: "Agendar"
            md_bg_color: '#FF69B4'
            font_name: "JosefinSans-Regular.ttf"
            size_hint: .79, .065
            pos_hint: {"center_x": .5, "center_y": .2}   
            on_press:  root.agendar(data.text, horario.text)    
                
            canvas.before:
                Color: 
                    rgb: 25/255, 38/255, 35/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [2]  
        